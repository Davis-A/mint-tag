#!/usr/bin/env perl
# PODNAME: mint-tag
use v5.20;
use lib 'lib';
use App::MintTag;

use App::MintTag::Logger '$Logger' => { init => {
  ident     => 'mint-tag',
  facility  => 'news',
  to_stdout => 1,
  log_pid   => 0,
  prefix    => 'log | ',
} };

use Getopt::Long::Descriptive;

my ($opt, $usage) = describe_options(
  '%c %o',
  [ 'config|c=s', 'config file to use', { required => 1 } ],
  [ 'auto',       'do not run in interactive mode' ],
  [ 'help|h',     'show help and exit', { shortcircuit => 1 } ],
);

print($usage->text), exit if $opt->help;

App::MintTag->from_config_file($opt->config)->build($opt->auto);
